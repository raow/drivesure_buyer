<% content_for :page_scripts do %>
  <script src="/assets/scripts/app.js"></script>
  <script src="/assets/scripts/form-components.js"></script>   
  <script>
    jQuery(document).ready(function() {       
      App.init();
      FormComponents.init();
    });
  </script> 
<% end %>
<div class="row-fluid">
  <div class="span12">
    <!-- BEGIN Basic FORM PORTLET-->   
    <div class="portlet box blue ">
      <div class="portlet-title">
        <div class="caption"><i class="icon-reorder"></i>账户信息</div>
        <div class="tools">
          <a href="javascript:;" class="collapse"></a>
        </div>
      </div>
      
      <div class="portlet-body form form-horizontal">
        <%= form_for(@user) do |f| %>
        <div class="control-group">
          <label class="control-label">账号(邮箱)<span class="required">*</span></label>
          <div class="controls">
            <%= f.email_field :email, :autofocus => true,:class => 'span6 m-wrap' %>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label">密码<span class="required">*</span></label>
          <div class="controls">
            <%= f.password_field :password, :class => 'span6 m-wrap' %>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label">确认密码<span class="required">*</span></label>
          <div class="controls">
            <%= f.password_field :password_confirmation, :class => 'span6 m-wrap' %>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label">角色<span class="required">*</span></label>
          <div class="controls">
            <%= f.select(:role, ['admin','user']) %>
          </div>
        </div>
          <div class="control-group">
          <label class="control-label">经销商<span class="required">*</span></label>
          <div class="controls">
            <%=f.collection_select(:dealer_id,Dealer.all,:id,:name ) %>
          </div>
        </div>
        <div class="form-actions">
          <button type="submit" class="btn blue"><i class="icon-ok"></i> 保存</button>
          <button type="cancel" class="btn">取消</button>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>