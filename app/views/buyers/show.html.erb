<% content_for :page_scripts do %>
<script src="/assets/scripts/app.js"></script>
<script src="/assets/scripts/form-components.js"></script>   
<script>
jQuery(document).ready(function() {       
	App.init();
	FormComponents.init();
});
</script> 
<% end %>
<div class="row-fluid">
	<div class="span12">
		<div class="portlet box blue ">
			<div class="portlet-title">
				<div class="caption"><i class="icon-reorder"></i>会员</div>
				<div class="tools">
					<a href="javascript:;" class="collapse"></a>
				</div>
			</div>

			<div class="portlet-body form form-horizontal">
				<div class="control-group">
					<%= label :buyer, :name, :class => 'control-label' %>
					<div class="controls">
						<span class="text"><%= @buyer.name %></span> 
					</div>
				</div>
				<div class="control-group">
					<%= label :buyer, :contact, :class => 'control-label' %>
					<div class="controls">
						<span class="text"><%= @buyer.contact %></span> 
					</div>
				</div>
				<div class="control-group">
					<%= label :buyer, :email, :class => 'control-label' %>
					<div class="controls">
						<span class="text"><%= @buyer.email %></span> 
					</div>
				</div>
				<div class="control-group">
					<%= label :buyer, :certificate_type, :class => 'control-label' %>
					<div class="controls">
						<span class="text"><%= @buyer.certificate_type %></span> 
					</div>
				</div>
				<div class="control-group">
					<%= label :buyer, :certificate_no, :class => 'control-label' %>
					<div class="controls">
						<span class="text"><%= @buyer.certificate_no %></span> 
					</div>
				</div>
				<div class="control-group">
					<%= label :buyer, :address, :class => 'control-label' %>
					<div class="controls">
						<span class="text"><%= @buyer.address %></span> 
					</div>
				</div>
				<div class="control-group">
					<%= label :buyer, :is_caa_vip, :class => 'control-label' %>
					<div class="controls">
						<span class="text"><%= @buyer.is_caa_vip %></span> 
					</div>
				</div>
				<div class="control-group">
					<%= label :buyer, :phone, :class => 'control-label' %>
					<div class="controls">
						<span class="text"><%= @buyer.phone %></span> 
					</div>
				</div>
				<div class="control-group">
					<%= label :buyer, :mobile, :class => 'control-label' %>
					<div class="controls">
						<span class="text"><%= @buyer.mobile %></span> 
					</div>
				</div>
				<div class="control-group">
					<%= label :buyer, :zip, :class => 'control-label' %>
					<div class="controls">
						<span class="text"><%= @buyer.zip %></span> 
					</div>
				</div>
			</div>
		</div>
	</div>
</div>