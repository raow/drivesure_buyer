<div class="row-fluid">
<div class="span12">
<!-- BEGIN EXAMPLE TABLE PORTLET-->
<div class="portlet box grey">
<div class="portlet-title">
<div class="caption"><i class="icon-globe"></i>购买者列表</div>
<div class="tools">
  <a href="javascript:;" class="collapse"></a>
</div>
</div>
<div class="portlet-body">

<div class="row-fluid">
  <div class="btn-group pull-right">
    <a href="/buyers/new" class="btn green">创建<i class="icon-plus"></i></a>
    
    <button class="btn dropdown-toggle" data-toggle="dropdown">工具<i class="icon-angle-down"></i>
    </button>

    <ul class="dropdown-menu pull-right">
      <li><a href="#">打印</a></li>
      <li><a href="#">保存PDF</a></li>
      <li><a href="#">导出Excel</a></li>
    </ul>
  </div>
  <div class="dataTables_filter pull-left" id="sample_1_filter">
    <label>搜索: <input type="text" aria-controls="sample_1" class="m-wrap medium"></label>
  </div>
  
</div>
<div id="sample_1_wrapper" class="dataTables_wrapper form-inline" role="grid">
  <table class="table table-striped table-bordered table-hover dataTable" id="sample_1" aria-describedby="sample_1_info">
    <thead>
      <tr>
        <th>全称</th>
        <th>联系人</th>
        <th>邮箱</th>
        <th>证件类型</th>
        <th>证件号码</th>
        <th>vip会员</th>
        <th>地址</th>
        <th>邮编</th>
        <th>固话</th>
        <th>手机</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody role="alert" aria-live="polite" aria-relevant="all"><tr class="gradeX odd">
      <% @buyers.each do |buyer| %>
      <tr>
        <td><%= buyer.name %></td>
        <td><%= buyer.contact %></td>
        <td><%= buyer.email %></td>
        <td><%= buyer.certificate_type %></td>
        <td><%= buyer.certificate_no %></td>
        <td><%= buyer.is_caa_vip %></td>
        <td><%= buyer.address %></td>
        <td><%= buyer.zip %></td>
        <td><%= buyer.phone %></td>
        <td><%= buyer.mobile %></td>
        <td><%= link_to '详情', buyer %></td>
        <td><%= link_to '编辑', edit_buyer_path(buyer) %></td>
        <td><%= link_to '删除', buyer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  
</div>
</div>
<!-- END EXAMPLE TABLE PORTLET-->
</div>
</div>
