<% content_for :page_scripts do %>
  <script src="/assets/scripts/app.js"></script>
  <script src="/assets/scripts/form-components.js"></script>   
  <script>
    jQuery(document).ready(function() {       
      App.init();
      FormComponents.init();
    });
  </script> 
<% end %>
<div class="row-fluid">
<div class="span12">
<div class="portlet box blue ">
<div class="portlet-title">
  <div class="caption"><i class="icon-reorder"></i>产品</div>
  <div class="tools">
    <a href="javascript:;" class="collapse"></a>
  </div>
</div>

<div class="portlet-body form form-horizontal">
	<div class="control-group">
		<%= label :product, :name, :class => 'control-label' %>
		<div class="controls">
			<span class="text"><%= @product.name %></span> 
		</div>
	</div>
	<div class="control-group">
		<%= label :product, :coverage_period, :class => 'control-label' %>
		<div class="controls">
			<span class="text"><%= @product.coverage_period %></span> 
		</div>
	</div>
	<div class="control-group">
		<%= label :product, :coverage_mile, :class => 'control-label' %>
		<div class="controls">
			<span class="text"><%= @product.coverage_mile %></span> 
		</div>
	</div>

	<div class="control-group">
		<%= label :product, :car_model_id, :class => 'control-label' %>
		<div class="controls">
			<span class="text"><%= @product.car_model.name %></span> 
		</div>
	</div>
	<div class="control-group">
		<%= label :product, :fee, :class => 'control-label' %>
		<div class="controls">
			<span class="text"><%= @product.fee %></span> 
		</div>
	</div>
	<div class="control-group">
		<%= label :product, :once_reparation, :class => 'control-label' %>
		<div class="controls">
			<span class="text"><%= @product.once_reparation %></span> 
		</div>
	</div>
	<div class="control-group">
		<%= label :product, :total_reparation, :class => 'control-label' %>
		<div class="controls">
			<span class="text"><%= @product.total_reparation %></span> 
		</div>
	</div>
	<div class="control-group">
            <label class="control-label">经销商<span class="required">*</span></label>
            <div class="controls">
              <div class="row-fluid">
                <% @product.dealers.each do |dealer| %>
                  <label class="checkbox line">
                  <span ><%= check_box_tag :dealer_ids, dealer.id, @product.dealers.include?(dealer), :name => 'product[dealer_ids][]' %></span><%= dealer.name %>
                  </label>
                <% end %>
              </div>
            </div>
        </div>
</div>
</div>
</div>
</div>