<% content_for :page_scripts do %>
<script src="/assets/scripts/app.js"></script>
<script src="/assets/scripts/form-components.js"></script>   
<script>
jQuery(document).ready(function() {       
	App.init();
	FormComponents.init();
});
</script> 
<% end %>
<div class="row-fluid">
	<div class="span12">
		<div class="portlet box blue ">
			<div class="portlet-title">
				<div class="caption"><i class="icon-reorder"></i>经销商</div>
				<div class="tools">
					<a href="javascript:;" class="collapse"></a>
				</div>
			</div>

			<div class="portlet-body form form-horizontal">
				<div class="control-group">
					<%= label :dealer, :name, :class => 'control-label' %>
					<div class="controls">
						<span class="text"><%= @dealer.name %></span> 
					</div>
				</div>
				<div class="control-group">
					<%= label :dealer, :address, :class => 'control-label' %>
					<div class="controls">
						<span class="text"><%= @dealer.address %></span> 
					</div>
				</div>
				<div class="control-group">
					<%= label :dealer, :contact, :class => 'control-label' %>
					<div class="controls">
						<span class="text"><%= @dealer.contact %></span> 
					</div>
				</div>
				<div class="control-group">
					<%= label :dealer, :telephone, :class => 'control-label' %>
					<div class="controls">
						<span class="text"><%= @dealer.telephone %></span> 
					</div>
				</div>
				<div class="control-group">
					<label class="control-label">产品<span class="required">*</span></label>
					<div class="controls">
						<div class="row-fluid">
							<% @dealer.products.each do |product| %>
							<label class="checkbox line">
								<span ><%= check_box_tag :product_ids, product.id, @dealer.products.include?(product)%></span><%= product.name %>
							</label>
							<% end %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>