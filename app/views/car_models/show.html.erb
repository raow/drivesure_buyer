<div class="row-fluid">
<div class="span12">
<div class="portlet box blue ">
<div class="portlet-title">
  <div class="caption"><i class="icon-reorder"></i>car_model</div>
  <div class="tools">
    <a href="javascript:;" class="collapse"></a>
  </div>
</div>

<div class="portlet-body form form-horizontal">
	<div class="control-group">
		<%= label :car_model, :name, :class => 'control-label' %>
